{
  "manifest_version": 3,
  "name": "Context AI",
  "version": "1.0",
  "description": "Automatically organizes bookmarks based on content and relevance.",
  "permissions": ["activeTab", "storage", "scripting", "tabs"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
